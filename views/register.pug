extends layout

block content
    link(rel='stylesheet',href='/stylesheets/sign.css')
    .login-box
        .container
            form(class='form-signin text-center register-form' onsubmit="return false" id="login-form")
                h1.h3.mb-3.font-weight-normal.login-title 注册
                .login-input-box
                    img(src='/images/account/user.png')
                    input(class='form-control form-input form-input-center username-input valid' id="email" placeholder="邮箱" type="email")
                .login-input-box
                    img(src='/images/account/user.png')
                    input(class='form-control form-input form-input-center username-input valid' id="username" placeholder="用户名" type="text")
                .login-input-box
                    img(src='/images/account/password.png')
                    input(class='form-control form-input form-input-center username-input valid' id="password" placeholder="密码" type="password")
                .form-group
                    button(class="btn btn-lg btn-primary btn-block login-btn" id="register" name="button" value="register") 注册

